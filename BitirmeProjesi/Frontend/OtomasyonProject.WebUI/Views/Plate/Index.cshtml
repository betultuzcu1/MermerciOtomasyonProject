@model List<PlateVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h4>Plate</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Width</th>
                    <th scope="col">Height</th>
                    <th scope="col">Thickness</th>
                    <th scope="col">Details</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PlateId</td>
                        <td>@item.Width</td>
                        <td>@item.Height</td>
                        <td>@item.Thickness</td>
                        <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
                        <td>
                            <a href="/Plate/DeletePlate/@item.PlateId" class="btn  mb-1 btn-rounded btn-outline-danger">Sil</a>
                            <a href="/Plate/UpdatePlate/@item.PlateId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <div>
            <a href="/Plate/AddPlate/" class="btn mb-1 btn-rounded btn-outline-danger">Add Plate</a>
        </div>

    </div>

</div>





